<div style="height: 60px;" class="navbar navbar-expand-sm navbar-light navbar-lewagon d-flex justify-content-between align-items-center">
  <div class="d-flex justify-content-between align-items-center">
  <%= link_to "/", class: "navbar-brand" do %>
     <%= cl_image_tag 'https://res.cloudinary.com/doe2rb42f/image/upload/v1556116874/skateit-logo_pb3rke.png', width: 100 %>
    <% end %>
  </div>
  <div>
    <%= form_tag spots_path, method: :get do |f| %>
      <div class="search-form-control form-group m-3 d-flex align-items-center">
        <div class='add-skate-button'>
          <div >
            <%= link_to "/spots/new", class: "" do %>
              <i class="add-icon fas fa-plus" style="color:white;"></i>
            <% end %>
          </div>
        </div>
        <%= text_field_tag :query,
            params[:query],
            class: "form-control string required search-form-control",
            placeholder: "Find a spot"
        %>
        <button name="button" type="submit" class="btn btn-flat">
          <i style="" class="search-icon fas fa-search"></i>
        </button>
      </div>
      <% end %>
    </div>
           <% if user_signed_in? %>
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <% else %>
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        <% end %>
  </div>
</div>
